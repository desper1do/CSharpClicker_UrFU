@model LoginViewModel
@{
    ViewBag.Title = "Вход";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5 shadow-lg" style="background-color: var(--card-bg); border: 1px solid #333; max-width: 400px; width: 100%; border-radius: 16px;">
        <h2 class="text-center mb-4 text-warning">Gold Clicker</h2>

        <form asp-action="login" asp-controller="auth" method="post">
            <div class="mb-3">
                <label for="username" class="form-label text-secondary">Логин</label>
                <input name="username" type="text" class="form-control" placeholder="Введите имя..." />
            </div>

            <div class="mb-4">
                <label for="password" class="form-label text-secondary">Пароль</label>
                <input name="password" type="password" class="form-control" placeholder="••••••" />
            </div>

            <button type="submit" class="btn btn-warning w-100 py-2 fw-bold" style="color: #000">Войти</button>

            <div class="text-center mt-3">
                <a href="~/auth/register" class="text-secondary small text-decoration-underline">Нет аккаунта? Зарегистрироваться</a>
            </div>

            <div class="mt-3 text-danger small">
                <div asp-validation-summary="All"></div>
            </div>
        </form>
    </div>
</div>