@model RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5 shadow-lg" style="background-color: var(--card-bg); border: 1px solid #333; max-width: 400px; width: 100%; border-radius: 16px;">
        <h2 class="text-center mb-4 text-info">Создать аккаунт</h2>

        <form asp-action="register" asp-controller="auth" method="post">
            <div class="mb-3">
                <label for="username" class="form-label text-secondary">Придумайте логин</label>
                <input name="username" type="text" class="form-control" />
            </div>

            <div class="mb-4">
                <label for="password" class="form-label text-secondary">Придумайте пароль</label>
                <input name="password" type="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-info w-100 py-2 fw-bold text-white">Зарегистрироваться</button>

            <div class="text-center mt-3">
                <a href="~/auth/login" class="text-secondary small text-decoration-underline">Уже играете? Войти</a>
            </div>

            <div class="mt-3 text-danger small">
                <div asp-validation-summary="All"></div>
            </div>
        </form>
    </div>
</div>